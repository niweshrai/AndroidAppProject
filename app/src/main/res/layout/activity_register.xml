<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <!--<RelativeLayout-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_margin="@dimen/sp_16"-->
            <!--android:background="@drawable/img_logo_bg">-->

            <!--<ImageView-->
            <!--android:id="@+id/imageViewbg"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:padding="16dp"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@drawable/img_logo_txt" />-->

            <!--</RelativeLayout>-->

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_16"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/linearLayoutRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_weight="0.5"
                        android:id="@+id/usernameLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/bg_edittextview">


                        <ImageView
                            android:id="@+id/imageView_fullname"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_action_user_grey"
                            tools:ignore="ContentDescription" />

                        <EditText
                            android:id="@+id/editTextFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textinput_height"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/imageView_fullname"
                            android:layout_toRightOf="@+id/imageView_fullname"
                            android:background="@null"
                            android:hint="@string/first_name"
                            android:inputType="text"
                            android:paddingBottom="@dimen/dp_16"
                            android:paddingEnd="@dimen/dp_16"
                            android:paddingLeft="0dp"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingStart="0dp"
                            android:paddingTop="@dimen/dp_16"
                            android:textColor="@color/secondaryText"
                            android:textColorHint="@color/hintTextColor"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="0.5"
                        android:id="@+id/lastnameLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/bg_edittextview">


                        <ImageView
                            android:id="@+id/imageView_lastname"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_action_user_grey"
                            tools:ignore="ContentDescription" />

                        <EditText
                            android:id="@+id/editTextLastName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textinput_height"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/imageView_lastname"
                            android:layout_toRightOf="@+id/imageView_lastname"
                            android:background="@null"
                            android:hint="@string/last_name"
                            android:inputType="text"
                            android:paddingBottom="@dimen/dp_16"
                            android:paddingEnd="@dimen/dp_16"
                            android:paddingLeft="0dp"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingStart="0dp"
                            android:paddingTop="@dimen/dp_16"
                            android:textColor="@color/secondaryText"
                            android:textColorHint="@color/hintTextColor"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/emailadressLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/bg_edittextview">

                        <ImageView
                            android:id="@+id/imageView_email"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_action_mail_grey"
                            tools:ignore="ContentDescription" />

                        <EditText
                            android:id="@+id/editTextEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textinput_height"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/imageView_email"
                            android:layout_toRightOf="@+id/imageView_email"
                            android:background="@null"
                            android:hint="@string/emailaddress"
                            android:inputType="textEmailAddress"
                            android:paddingBottom="@dimen/dp_16"
                            android:paddingEnd="@dimen/dp_16"
                            android:paddingLeft="0dp"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingStart="0dp"
                            android:paddingTop="@dimen/dp_16"
                            android:textColor="@color/secondaryText"
                            android:textColorHint="@color/hintTextColor"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/passwordLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textinput_height"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/bg_edittextview">

                        <ImageView
                            android:id="@+id/imageView_password"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_action_password_grey"
                            tools:ignore="ContentDescription" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textinput_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textinput_height"
                            android:layout_toEndOf="@+id/imageView_password"
                            android:layout_toRightOf="@+id/imageView_password"
                            android:gravity="center_vertical"
                            app:hintEnabled="false">


                            <EditText
                                android:id="@+id/editTextPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="8dp"
                                android:layout_toEndOf="@+id/imageView_password"
                                android:layout_toRightOf="@+id/imageView_password"
                                android:background="@null"
                                android:hint="@string/password"
                                android:inputType="textPassword"
                                android:textColor="@color/secondaryText"
                                android:textColorHint="@color/hintTextColor"
                                android:textSize="@dimen/sp_14" />

                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/confirmpasswordLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textinput_height"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/bg_edittextview">

                        <ImageView
                            android:id="@+id/imageView_confirmpassword"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_action_password_grey"
                            tools:ignore="ContentDescription" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textinput_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textinput_height"
                            android:layout_toEndOf="@+id/imageView_confirmpassword"
                            android:layout_toRightOf="@+id/imageView_confirmpassword"
                            android:gravity="center_vertical"
                            app:hintEnabled="false">


                            <EditText
                                android:id="@+id/editTextConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="8dp"
                                android:layout_toEndOf="@+id/imageView_confirmpassword"
                                android:layout_toRightOf="@+id/imageView_confirmpassword"
                                android:background="@null"
                                android:hint="@string/confirm_password"
                                android:inputType="textPassword"
                                android:textColor="@color/secondaryText"
                                android:textColorHint="@color/hintTextColor"
                                android:textSize="@dimen/sp_14" />

                        </android.support.design.widget.TextInputLayout>


                    </RelativeLayout>

                    <!--<CheckBox-->
                    <!--android:id="@+id/register_checkbox"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/dp_16"-->
                    <!--android:buttonTint="@android:color/darker_gray"-->
                    <!--android:padding="@dimen/dp_8"-->
                    <!--android:text="@string/aggrement"-->
                    <!--android:textColor="@android:color/darker_gray"-->
                    <!--android:textSize="@dimen/sp_18" />-->


                    <Button
                        android:id="@+id/registerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/btn_ripple_primary"
                        android:elevation="2dp"
                        android:text="@string/register"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/cardview_register"
                android:layout_alignStart="@+id/cardview_register"
                android:layout_below="@+id/cardview_register"
                android:layout_marginTop="-35dp"
                android:src="@drawable/img_bubble_bg2"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/cardview_register"
                android:layout_marginBottom="-35dp"
                android:layout_alignEnd="@+id/cardview_register"
                android:src="@drawable/img_bubble_bg"
                tools:ignore="ContentDescription"
                android:layout_alignRight="@+id/cardview_register" />

            <FrameLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/img_bottom_nav">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/loginTxtViewlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:text="@string/login_txt"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/loginTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_toEndOf="@+id/loginTxtViewlabel"
                        android:layout_toRightOf="@+id/loginTxtViewlabel"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/login"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>


